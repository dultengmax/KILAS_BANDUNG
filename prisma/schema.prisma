generator client {
  provider = "prisma-client"
}

// The 'url' and 'directUrl' properties are deprecated in Prisma schema files as of v5.13+.
// Move connection URLs to `prisma.config.ts` instead. See https://pris.ly/d/config-datasource
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}


model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  role     String?   @default("USER")
  Article  Article[]
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  subCategory String[]
}

model Article {
  id            Int      @id @default(autoincrement())
  title         String
  slug          String   @unique
  excerpt       String?
  image         String?
  audio         String?
  category      Json?
  subcategory   Json?
  author        String?
  publishedAt   DateTime
  updatedAt     DateTime
  readTime      Int?
  views         Int?     @default(0)
  featuredImage String?
  content       String?
  status        String?
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
}

model Media {
  id          Int      @id @default(autoincrement())
  url         String
  image       String?
  video       String?
  type        String?
  description String?
  location    String?
  content     String?
  createdAt   DateTime @default(now())
}

model AboutUs {
  id        Int      @id @default(autoincrement())
  title     String
  deskripsi String
  email     String?
  visi      String?
  misi      String?
  image     String?
  address   String?
  instagram String?
  tiktok    String?
  facebook  String?
  twitter   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}